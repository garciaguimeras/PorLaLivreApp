<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:layout_marginLeft="10dp"
	android:layout_marginRight="10dp"
	android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

		    <RelativeLayout
		        android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/announceTitleTextView"
                    style="@style/TitleFont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/starredImageView"
                    android:layout_toStartOf="@+id/starredImageView"
                    android:layout_marginRight="10dp"
                    android:ellipsize="none"
                    android:scrollHorizontally="false"
                    android:singleLine="false"
                    android:text="Title" />

                <ImageView
                    android:id="@+id/starredImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/thumb_down_icon" />
		    
		    </RelativeLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/imageView6"
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:src="@drawable/money_icon" />

				<TextView
					android:id="@+id/announcePriceTextView"
					style="@style/PriceFont"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Price" />

			</LinearLayout>

			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
			    android:orientation="horizontal">

				<ImageView
				    android:id="@+id/imageView1"
				    android:layout_width="24dp"
				    android:layout_height="24dp"
				    android:src="@drawable/calendar_icon" />

				<TextView
				    android:id="@+id/announceUpdateDateTextView"
				    style="@style/ContactFont"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:text="Fecha" />
			    
			</LinearLayout> 
			
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
		        android:orientation="horizontal">

		        <ImageView
		            android:id="@+id/imageView2"
		            android:layout_width="24dp"
		            android:layout_height="24dp"
		            android:src="@drawable/place_icon" />
		        
		        <TextView 
		            android:id="@+id/announceSiteTextView"
		            style="@style/ContactFont"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:text="Sitio"/>      
		        
		    </LinearLayout>	
		    
            <LinearLayout
				android:id="@+id/announceNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/contact_icon" />
                
                <TextView 
                    android:id="@+id/announceContactNameTextView"
                    style="@style/ContactFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Nombre"/>      
                
            </LinearLayout> 
            
            <LinearLayout
				android:id="@+id/announcePhoneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/phone_icon" />

				<LinearLayout
					android:id="@+id/contactPhoneLayout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

				</LinearLayout>
                
            </LinearLayout>     
            
            <LinearLayout
				android:id="@+id/announceEmailLayout"
				android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/mail_icon" />
                
                <TextView 
                    android:id="@+id/announceContactEmailTextView"
                    style="@style/LinkFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Email"/>      
                
            </LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:orientation="vertical">

				<TextView
					android:id="@+id/announceTagTextView"
					style="@style/TagFont"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:text="Etiquetas"/>

				<TextView
					android:id="@+id/announceDescriptionTextView"
					style="@style/DescriptionFont"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:ellipsize="none"
					android:scrollHorizontally="false"
					android:singleLine="false"
					android:text="Description"/>

			</LinearLayout>
		    
        </LinearLayout>
        		    
    </ScrollView>
    
</LinearLayout>
