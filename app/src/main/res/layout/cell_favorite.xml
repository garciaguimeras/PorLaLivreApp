<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/porlalivre_light">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

        <TextView
            android:id="@+id/favoriteRowTitleTextView"
            style="@style/TitleFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/starredImageView"
            android:layout_toStartOf="@+id/starredImageView"
            android:lines="2"
            android:singleLine="false"
            android:text="Title" />

        <ImageView
            android:id="@+id/starredImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/thumb_down_icon" />

	</RelativeLayout>

	<TextView
		android:id="@+id/favoriteRowCategoryTextView"
		style="@style/PriceFont"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:text="Category" />

	<TextView
		android:id="@+id/favoriteRowPriceTextView"
		style="@style/PriceFont"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:text="Price" />

	<TextView
		android:id="@+id/favoriteRowDescriptionTextView"
		style="@style/DescriptionFont"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:lines="2"
		android:singleLine="false"
		android:text="Description" />

</LinearLayout>